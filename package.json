{
  "private": true,
  "name": "tpb-ui",
  "version": "0.0.0",
  "dependencies": {
    "angular": "1.3.1",
    "browserify": "6.2.0",
    "parse-torrent-name": "0.5.1",
    "uglify-js": "2.4.15"
  },
  "scripts": {
    "clean-chrome": "rm -rf dist-chrome",
    "clean": "npm run clean-chrome",
    "copy-chrome": "mkdir dist-chrome && cp -rf src/* dist-chrome",
    "js-chrome": "browserify -r ./src/app.js:app | uglifyjs > dist-chrome/app.js",
    "bg-chrome": "uglifyjs src/background.js > dist-chrome/background.js",
    "opt-chrome": "uglifyjs src/options.js > dist-chrome/options.js",
    "browserify-chrome": "npm run js-chrome && npm run bg-chrome && npm run opt-chrome",
    "rm-js-chrome": "rm dist-chrome/util.js dist-chrome/tpb-ui.js",
    "build-chrome": "npm run clean-chrome && npm run copy-chrome && npm run browserify-chrome && npm run rm-js-chrome",
    "build": "npm run build-chrome",
    "install": "npm run build"
  }
}
